<h1>Edit Planet</h1>

<form action="<%= planet_path(@planet.id) %>" method="post">
  <label>
    Name:
    <input type="text" name="name" value="<%= @planet.name %>" required autofocus>
  </label>
  <label>
    Image:
    <input type="url" name="image" value="<%= @planet.image %>" placeholder="http://...">
  </label>
  <label>
    Orbit:
    <input type="number" name="orbit" value="<%= @planet.orbit %>">
  </label>
  <label>
    Diameter:
    <input type="number" name="diameter" value="<%= @planet.diameter %>">
  </label>
  <label>
    Mass:
    <input type="number" name="mass" value="<%= @planet.mass %>">
  </label>
  <label>
    Moons:
    <input type="number" name="moons" value="<%= @planet.moons %>">
  </label>
  <button>Update planet</button>
</form>
